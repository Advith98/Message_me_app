<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages" >
        <div class="ui feed" id="message-container">
          <h4 class="ui header">Followers Activity</h4>
            <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    <div class="four wide column">
        <div class="ui large vertical menu">
            <a class="active item">
                <div class="ui small teal label">1</div>
                Home
            </a>
            <a class="item">
                <div class="ui small label">51</div>
                Messages
            </a>
            <a class="item">
                <div class="ui small label">1</div>
                Friends
            </a>
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search messages">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>